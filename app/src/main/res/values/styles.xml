<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ThreadTimeStamp">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/time_stamp_colour</item>
    </style>

    <style name="ThreadMessage">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="DisabledBannerText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:background">@color/theme_colour</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoChromeEditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@null</item>
    </style>

</resources>
