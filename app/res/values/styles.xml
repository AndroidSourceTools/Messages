<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="ThreadTimeStamp">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/time_stamp_colour</item>
    </style>

    <style name="ThreadMessage">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:textIsSelectable">true</item>
    </style>

    <style name="DisabledBannerText">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:background">@color/theme_colour</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textSize">18sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NoChromeEditText" parent="@android:style/Widget.Holo.EditText">
        <item name="android:minHeight">48dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="ConversationText" parent="Material.Body1">
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">@integer/conversation_preview_lines</item>
        <item name="android:minLines">@integer/conversation_preview_lines</item>
        <item name="android:lines">@integer/conversation_preview_lines</item>
    </style>

    <style name="ConversationText.Unread">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/material_text_standard_dark</item>
    </style>

    <style name="ConversationTitle" parent="Material.Title">
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="ConversationTitle.Unread">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/theme_colour</item>
    </style>

    <style name="LoadingView">
        <item name="lv_scale">@integer/loading_scale_small</item>
    </style>

    <style name="LoadingView.Large">
        <item name="lv_scale">@integer/loading_scale_large</item>
    </style>

    <style name="ContactView" />

    <style name="ContactView.Chip">
        <item name="titleTextAppearance">@style/ContactViewTitleChip</item>
    </style>

    <style name="ContactView.Inverse">
        <item name="titleTextAppearance">@style/ContactViewTitle.Light</item>
        <item name="secondaryTextAppearance">@style/ContactViewLightSecondary</item>
    </style>

    <style name="ContactViewTitle.Light">
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>

    <style name="ContactViewTitle" parent="@android:style/TextAppearance.Medium">
    </style>

    <style name="ContactViewTitleChip" parent="@android:style/TextAppearance.Medium">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="ContactViewLightSecondary" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:textColor">#bbffffff</item>
    </style>

    <style name="Text.Mission">
        <item name="android:lineSpacingMultiplier">1.1</item>
    </style>

    <style name="Text" parent="android:TextAppearance.Holo.Medium" />

    <integer name="loading_scale_small">2</integer>
    <integer name="loading_scale_large">1</integer>
</resources>
